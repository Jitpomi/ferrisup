[package]
name = "{{project_name}}"
version = "0.1.0"
edition = "2021"
authors = ["Your Name <your.email@example.com>"]
description = "A machine learning application using Linfa for classical ML algorithms"

[dependencies]
linfa = "0.7.1"
linfa-datasets = { version = "0.7.1", features = ["iris", "diabetes", "winequality"] }
