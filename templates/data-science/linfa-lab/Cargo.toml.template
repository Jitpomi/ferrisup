linfa-svm = "0.7.1"
linfa-nn = "0.7.1"
linfa-preprocessing = "0.7.1"
ndarray = { version = "0.15", features = ["serde"] }
ndarray-rand = "0.14"
ndarray-stats = "0.5"
ndarray-csv = "0.5"
csv = "1.3"
plotters = "0.3"
anyhow = "1.0"
clap = { version = "4.5", features = ["derive"] }
serde = { version = "1.0", features = ["derive"] }
rand = "0.8"
rand_distr = "0.4"
indicatif = "0.17"
