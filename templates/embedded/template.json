{
  "name": "embedded",
  "description": "A Rust embedded systems application template for microcontrollers",
  "type": "binary",
  "files": [
    {
      "source": "main.rs",
      "target": "src/main.rs"
    },
    {
      "source": "memory.x",
      "target": "memory.x"
    },
    {
      "source": ".cargo/config.toml",
      "target": ".cargo/config.toml"
    },
    {
      "source": "Cargo.toml.template",
      "target": "Cargo.toml"
    },
    {
      "source": "README.md",
      "target": "README.md"
    }
  ],
  "options": [
    {
      "name": "mcu_target",
      "description": "Microcontroller target",
      "type": "select",
      "options": ["rp2040", "stm32", "esp32", "arduino"],
      "default": "rp2040"
    }
  ],
  "transformations": [
    {
      "pattern": "main.rs",
      "replacement": {
        "rp2040": "main.rs.rp2040",
        "stm32": "main.rs.stm32",
        "esp32": "main.rs.esp32",
        "arduino": "main.rs.arduino"
      }
    }
  ],
  "dependencies": {
    "default": [
      "panic-halt = \"0.2\"",
      "cortex-m = \"0.7\"",
      "cortex-m-rt = \"0.7\"",
      "embedded-hal = \"0.2\""
    ]
  },
  "dev-dependencies": {
    "default": [
      "defmt = \"0.3\"",
      "defmt-rtt = \"0.4\"",
      "panic-probe = { version = \"0.3\", features = [\"print-defmt\"] }"
    ]
  }
}
