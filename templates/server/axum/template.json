{
  "name": "axum-server",
  "description": "A modern Rust web server using the Axum framework",
  "type": "binary",
  "files": [
    {
      "source": "main.rs",
      "target": "src/main.rs"
    },
    {
      "source": "Cargo.toml.template",
      "target": "Cargo.toml"
    },
    {
      "source": "README.md",
      "target": "README.md"
    }
  ],
  "dependencies": {
    "default": [
      "axum = \"0.8.3\"",
      "tokio = { version = \"1.36\", features = [\"full\"] }",
      "serde = { version = \"1.0\", features = [\"derive\"] }",
      "serde_json = \"1.0\"",
      "tower = \"0.4\"",
      "tower-http = { version = \"0.5\", features = [\"trace\"] }",
      "tracing = \"0.1\"",
      "tracing-subscriber = \"0.3\""
    ]
  },
  "dev-dependencies": {
    "default": [
      "reqwest = { version = \"0.11\", features = [\"json\"] }"
    ]
  },
  "next_steps": [
    "cd {{project_name}}",
    "cargo run",
    "# Test the API with: curl http://localhost:3000/",
    "# Add more routes in src/main.rs",
    "# Explore middleware options with tower-http"
  ]
}
